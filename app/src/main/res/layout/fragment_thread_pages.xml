<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/padding_thread_fragment"
    android:paddingStart="@dimen/padding_thread_fragment"
    android:paddingTop="@dimen/padding_thread_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/page" />

        <Spinner
            android:id="@+id/page_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/threads_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/inner_padding_thread_fragment" />

</LinearLayout>